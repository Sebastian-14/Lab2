<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/textview_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="pÃ¡ginasamarilas"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textview_main_tsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_main_title"
        android:layout_margin="10dp"
        android:text="Que busca:"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/search_main_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_main_tsearch"
        android:layout_margin="10dp"
        android:hint="Ingrese nombre"
        android:padding="10dp"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_main_input"
        android:layout_centerInParent="true"
        android:onClick="callLogin"
        android:text="Buscar"/>


</RelativeLayout>